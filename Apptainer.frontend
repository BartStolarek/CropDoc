Bootstrap: docker
From: node:20-slim

%post
    apt-get update && apt-get install -y curl
    apt-get clean && rm -rf /var/lib/apt/lists/*

    mkdir -p /frontend
    cd /frontend

%environment
    export NEXT_PUBLIC_API_URL=http://localhost:5000

%runscript
    cd /frontend && npm install && npm run dev

%startscript
    cd /frontend && npm install && npm run dev